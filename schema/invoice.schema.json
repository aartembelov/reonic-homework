{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://reonic.com/schemas/invoice.json",
  "title": "Invoice",
  "description": "A customer invoice",
  "type": "object",
  "required": [
    "invoiceId",
    "invoiceNumber",
    "customerName",
    "customerEmail",
    "invoiceDate",
    "dueDate",
    "items",
    "subtotal",
    "tax",
    "total",
    "status"
  ],
  "properties": {
    "invoiceId": {
      "type": "string",
      "description": "Unique identifier for the invoice",
      "pattern": "^INV-[0-9A-F]{8}-[0-9A-F]{4}-[0-9A-F]{4}-[0-9A-F]{4}-[0-9A-F]{12}$"
    },
    "invoiceNumber": {
      "type": "string",
      "description": "Human-readable invoice number",
      "pattern": "^[0-9]{4}-[0-9]{4}$"
    },
    "customerName": {
      "type": "string",
      "description": "Full name of the customer",
      "minLength": 1,
      "maxLength": 255
    },
    "customerEmail": {
      "type": "string",
      "description": "Customer's email address",
      "format": "email"
    },
    "customerAddress": {
      "type": "object",
      "description": "Customer's billing address",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        }
      }
    },
    "invoiceDate": {
      "type": "string",
      "description": "Date the invoice was issued",
      "format": "date"
    },
    "dueDate": {
      "type": "string",
      "description": "Payment due date",
      "format": "date"
    },
    "items": {
      "type": "array",
      "description": "Line items on the invoice",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "description",
          "quantity",
          "unitPrice",
          "total"
        ],
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of the item or service"
          },
          "quantity": {
            "type": "number",
            "description": "Quantity of items",
            "minimum": 0
          },
          "unitPrice": {
            "type": "number",
            "description": "Price per unit",
            "minimum": 0
          },
          "total": {
            "type": "number",
            "description": "Total price for this line item (quantity * unitPrice)",
            "minimum": 0
          }
        }
      }
    },
    "subtotal": {
      "type": "number",
      "description": "Sum of all line items before tax",
      "minimum": 0
    },
    "tax": {
      "type": "number",
      "description": "Tax amount",
      "minimum": 0
    },
    "total": {
      "type": "number",
      "description": "Total amount due (subtotal + tax)",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "description": "Currency code (ISO 4217)",
      "default": "EUR",
      "pattern": "^[A-Z]{3}$"
    },
    "status": {
      "type": "string",
      "description": "Current status of the invoice",
      "enum": [
        "draft",
        "sent",
        "paid",
        "overdue",
        "cancelled"
      ]
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or comments"
    }
  }
}
